
# get latest redis (http://redis.io/download)

$ tar -xzvf redis.tar.gz .

$ cd redis

$ export WIMBLY_PATH=/var/www

$ make PREFIX=$WIMBLY_PATH/redis install

$ mkdir $WIMBLY_PATH/redis/conf

$ mkdir $WIMBLY_PATH/redis/logs

$ mkdir $WIMBLY_PATH/redis/data

$ cp ../redis.conf $WIMBLY_PATH/redis/conf

